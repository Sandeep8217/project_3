<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Messages</title>
    <!-- Add Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Messages</h2>
        <% if (messages.length > 0) { %>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Sender</th>
                        <th scope="col">Recipient</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Message</th>
                        <th scope="col">Date Sent</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% messages.forEach(message => { %>
                        <tr>
                            <td><%= message.sender.username %></td>
                            <td><%= message.recipient.username %></td>
                            <td><%= message.subject %></td>
                            <td><%= message.body %></td>
                            <td><%= message.dateSent.toDateString() %></td>
                            <td>
                                <a href="/admin/replyMessage/<%= message._id %>" class="btn btn-primary">Reply</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No messages found.</p>
        <% } %>
        <a href="/admin/dashboard" class="btn btn-primary mt-3">Back to Dashboard</a>
    </div>

    <!-- Add Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
